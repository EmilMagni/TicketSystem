@{

    ViewData["Title"] = "Organizer LandingPage";
    var organizer = ViewBag.Organizer;
    var events = ViewBag.Events;
}



<div class="row">
    <div class="col-6">
        <h2>Your events</h2>
        <a class="btn btn-primary w-40 mt-2" asp-controller="Organizer" asp-action="CreateEvent" asp-route-id="@organizer.OrganizerID"><i class="far fa-calendar-plus"></i> Create Event</a>
    </div>
    <div class="col-6 text-right">
        <div class="avatar-container d-block">
            <img src="https://i.pravatar.cc/50" class=" = align-self-center rounded-circle d-inline" />
            <h4 class="d-inline align-middle mt-3 ml-2"> @organizer.ContactPerson</h4>
        </div>
        <div class="d-block">
            <a class="btn btn-primary  w-40 mt-2" asp-controller="Organizer" asp-action="ChangeLoginInfo" asp-route-id="@organizer.OrganizerID"><i class="fas fa-user-edit"></i> Account information</a>
        </div>
    </div>
    <div class="row">

    </div>
    </div>


    @foreach (var eventt in events)
    {
        <div class="card w-100 mt-3">
            <div class="card-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-2">
                            <img src="/Image/@eventt.Image" class="lpimg"/>
                        </div>
                        <div class="col-4">
                            <h5 class="card-title">@eventt.EventName</h5>
                            <p class="mb-0">@eventt.Date.Day/@eventt.Date.Month/@eventt.Date.Year</p>
                            <p class="mb-0">@eventt.Time.Hours:@eventt.Time.Minutes</p>
                            <p class="mb-0">@eventt.Location</p>
                        </div>
                        <div class="col-4">
                            <p class="mb-0 mt-3">Tickets sold: @eventt.TicketsSold</p>
                            <p class="mb-0 mt-3">Tickets left: @eventt.TicketsLeft</p>
                        </div>
                        <div class="col-2 text-center">
                            <a class="btn btn-primary  w-100" asp-controller="Organizer" asp-action="OrganizerViewEvent" asp-route-id="@eventt.EventID">View Event</a>
                            <a class="btn btn-primary  w-100 mt-3" asp-controller="Organizer" asp-action="EditEvent" asp-route-id="@eventt.EventID">Edit Event</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    

    }