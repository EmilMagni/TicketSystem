
@{
    ViewData["Title"] = "EditEvent";
    var events = ViewBag.Events;

}

<h3 id="Createevent" class="text-left">Edit Event</h3>
@foreach (var eventt in events)
{
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-12 mb-3">
                <button type="button" class="btn btn-primary float-left">Cancel event</button>
                <!-- Denne Delete knap skal kun vises på events der er udløbet eller cancelled
                <button type="submit" class="btn btn-primary float-left ml-5">Delete event</button>
                    -->
            </div>

        </div>
        <div class="col-md-12">
            <div class="float-right form-group col-md-6">
                @Html.Label("Description *") <br />
                @Html.TextArea("Description", null, new { required = true, placeholder = eventt.Description, @class = "form-control",})
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-0">
                @Html.Label("Event name *") <br />
                @Html.TextBox("Name", null, new { required = true, placeholder = eventt.EventName, @class = "form-control"})<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Location *") <br />
                @Html.TextBox("Location", null, new { required = true, placeholder = eventt.Location, @class = "form-control"})<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Date *") <br />
                @Html.TextBox("Date", null, new { required = true, placeholder  = eventt.Date, @class = "form-control", @type = "date" })<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Start time *") <br />
                @Html.TextBox("Time", null, new { required = true, placeholder = eventt.Time, @class = "form-control", @type = "time"})<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Total amount of tickets *") <br />
                @Html.TextBox("TicketAmount", null, new { required = true, placeholder = eventt.TicketAmount, @class = "form-control", @type = "number" })<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Price *") <br />
                @Html.TextBox("Price", null, new { required = true, placeholder = eventt.Price, @class = "form-control", @type = "float" })<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Image") <br />
                @Html.TextBox("Image", null, new { placeholder = eventt.Image, @class = "form-control", @type = "file" })<br />
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-8">
                <button type="button" class="btn btn-primary">Back</button>
            </div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i>Save changes</button>
            </div>
        </div>
    }
}


