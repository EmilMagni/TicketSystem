@{
    var Ticket = ViewBag.Ticket;
    var eventt = ViewBag.Event;
}


    <div class="card w-100 mt-3 border-0">
        <div class="card-body pb-0">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-4">
                        <img src="/Image/" class="otimg" />
                    </div>
                    <div class="col-8">
                        <h3 class="card-title">@eventt.EventName</h3>
                        <p class="mb-0">@eventt.Description</p>
                        <hr />
                        <ul class="eventdata">
                            <div class="float-left mr-5">
                                <li><b><i class="fas fa-map-marked-alt"></i> Location: @eventt.Location</b></li>
                                <li><i class="fas fa-calendar-day mt-3"></i> Date: @eventt.Date.Day/@eventt.Date.Month/@eventt.Date.Year at @eventt.Time.ToString("hh"):@eventt.Time.ToString("mm")</li>
                                <li><i class="fas fa-money-bill-alt mt-3"></i> Price: @eventt.Price kr.</li>
                            </div>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <h3 class="text-center m-3">Order Ticket to @eventt.EventName</h3>
    @using (Html.BeginForm("OrderTicket", "Customer", null, FormMethod.Post))
    {
        <div class="col-1g-4 col-lg-offset-4">
            <div class="form-group mb-0">
                @Html.Label("First name *") <br />
                @Html.TextBox("customer_first_name", null, new { required = true, placeholder = "First name", @class = "form-control", @type = "text" })<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Surname *") <br />
                @Html.TextBox("customer_surname", null, new { required = true, placeholder = "Surname", @class = "form-control", @type = "text" })<br />
            </div>
            <div class="form-group mb-0">

                @Html.Label("Email *") <br />
                @Html.TextBox("customer_email", null, new { required = true, placeholder = "Email", @class = "form-control", @type = "text" })<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Confirm Email *") <br />
                @Html.TextBox("ConfirmCustomerEmail", null, new { required = true, placeholder = "Confirm Email", @class = "form-control", @type = "text" })<br />
            </div>
            <div class="form-group mb-0">
                @Html.Label("Phone number *") <br />
                @Html.TextBox("customer_phonenumber", null, new { required = true, placeholder = "Phone Number", @class = "form-control", @type = "number" })<br />
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <a class="btn btn-primary" asp-controller="Customer" asp-action="LandingPage"><i class="fas fa-angle-left"></i> Back</a>
            </div>
            <div class="col-4 text-right">
                <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Buy Ticket</button>
            </div>
        </div>
    }








