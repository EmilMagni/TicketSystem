@{
    var Event = ViewBag.Event;
}

<h3 id="Createevent" class="text-left">Create Event</h3>

<div class="float-right form-group col-md-6">
    <form action="#">
        <textarea name="message" style="width:100%; height:350px;"></textarea>
        <br>
        <input type="submit">
    </form>
</div>

<div class="col-md-6">
    @using (Html.BeginForm())
    {
        <div class="form-group mb-0">
            @Html.Label("Event name *") <br />
            @Html.TextBox("Event name", null, new { required = true, placeholder = "Event name", @class = "form-control" })<br />
        </div>
        <div class="form-group mb-0">
            @Html.Label("Location *") <br />
            @Html.TextBox("Location", null, new { required = true, placeholder = "Location", @class = "form-control" })<br />
        </div>
        <div class="form-group mb-0">
            @Html.Label("Date and time *") <br />
            @Html.TextBox("Date and time", null, new { required = true, placeholder = "Date and time", @class = "form-control" })<br />
        </div>
        <div class="form-group mb-0">
            @Html.Label("Total amount of tickets *") <br />
            @Html.TextBox("Total amount of tickets", null, new { required = true, placeholder = "Total amount of tickets", @class = "form-control" })<br />
        </div>
        <div class="form-group mb-0">
            @Html.Label("Price *") <br />
            @Html.TextBox("Price", null, new { required = true, placeholder = "Price", @class = "form-control" })<br />
        </div>
    }
</div>
<div class="form-group col-md-4">
    <form action="upload.php" method="post">
        <label for="image">Image</label>
        <input type="file" class="form-control" name="fileToUpload" id="fileToUpload" placeholder="Image.png">
    </form>
</div>

<div class="row">
    <div class="col-8">
        <button type="button" class="btn btn-primary">Back</button>
    </div>
    <div class="col-4">
        <button type="submit" class="btn btn-primary">Create event</button>
    </div>
</div>
