@{
    var Event = ViewBag.Event;
}

<h3 id="Createevent" class="text-left">Create Event</h3>

<div class="float-right form-group col-md-6">
    <form action="#">
        <textarea name="message" style="width:100%; height:350px;"></textarea>
        <br>
        <input type="submit">
    </form>
</div>

<form>
    <div class="form-group col-md-6">
        <label for="eventname">Event name *</label>
        <input type="text" class="form-control" id="eventname" placeholder="Event Name" required>
    </div>
    <div class="form-group col-md-6">
        <label for="location">Location *</label>
        <input type="text" class="form-control" id="location" placeholder="Aalborg Universitet" required>
    </div>
    <div class="form-group col-md-6">
        <label for="date">Date *</label>
        <input type="date" class="form-control" id="Date" placeholder="13/10/2019" required>
    </div>
    <div class="form-group col-md-6">
        <label for="time">Time *</label>
        <input type="time" class="form-control" id="Time" placeholder="20:30" required>
    </div>
    <div class="form-group col-md-6">
        <label for="totaltickets">Total amount of tickets *</label>
        <input type="number" class="form-control" id="TotalTickets" placeholder="100" required>
    </div>
    <div class="form-group col-md-6">
        <label for="price">Price *</label>
        <input type="number" class="form-control" id="Price" placeholder="12 kr." required>
    </div>
</form>
<div class="form-group col-md-4">
    <form action="upload.php" method="post">
        <label for="image">Image</label>
        <input type="file" class="form-control" name="fileToUpload" id="fileToUpload" placeholder="Image.png">
    </form>
</div>

<div class="row">
    <div class="col-8">
        <button type="button" class="btn btn-primary">Back</button>
    </div>
    <div class="col-4">
        <button type="submit" class="btn btn-primary">Create event</button>
    </div>
</div>
